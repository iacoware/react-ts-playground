        "react": "17.0.1",
        "react-dom": "17.0.1"
    },
    "devDependencies": {
        "@types/react": "17.0.0",
        "@types/react-dom": "17.0.0",
        "eslint": "7.15.0",
        "eslint-config-prettier": "7.0.0",
        "eslint-plugin-prettier": "3.2.0",
        "eslint-plugin-react": "7.21.5",
        "parcel": "1.12.4",
        "prettier": "2.2.1",
        "rimraf": "3.0.2",
        "typescript": "4.1.2"
    }
}
